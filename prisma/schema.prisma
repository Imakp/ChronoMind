// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For email/password authentication
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  years    Year[]
  tags     Tag[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Year {
  id     String @id @default(cuid())
  year   Int
  userId String
  user   User   @relation(fields: [userId], references: [id])

  dailyLogs            DailyLog[]
  quarterlyReflections QuarterlyReflection[]
  goals                Goal[]
  genres               Genre[]
  lessons              Lesson[]
  creativeNotes        CreativeNote[]

  @@unique([userId, year])
}

model DailyLog {
  id      String    @id @default(cuid())
  date    DateTime
  content Json?
  yearId  String
  year    Year      @relation(fields: [yearId], references: [id])

  highlights Highlight[]

  @@unique([yearId, date])
}

model QuarterlyReflection {
  id      String @id @default(cuid())
  quarter Int    // 1, 2, 3, or 4
  content Json?
  yearId  String
  year    Year   @relation(fields: [yearId], references: [id])

  highlights Highlight[]

  @@unique([yearId, quarter])
}

model Goal {
  id          String  @id @default(cuid())
  title       String
  description Json?   // Tiptap content for detailed goal notes
  percentage  Float   @default(0)
  yearId      String
  year        Year    @relation(fields: [yearId], references: [id])

  tasks      Task[]
  highlights Highlight[]
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description Json?     // Tiptap content for detailed task notes
  percentage  Float     @default(0)
  goalId      String
  goal        Goal      @relation(fields: [goalId], references: [id])

  subtasks   SubTask[]
  highlights Highlight[]
}

model SubTask {
  id         String  @id @default(cuid())
  title      String
  isComplete Boolean @default(false)
  taskId     String
  task       Task    @relation(fields: [taskId], references: [id])

  highlights Highlight[]
}

model Genre {
  id     String @id @default(cuid())
  name   String
  yearId String
  year   Year   @relation(fields: [yearId], references: [id])

  books  Book[]
}

model Book {
  id      String @id @default(cuid())
  title   String
  genreId String
  genre   Genre  @relation(fields: [genreId], references: [id])

  chapters Chapter[]
}

model Chapter {
  id      String @id @default(cuid())
  title   String
  content Json?
  bookId  String
  book    Book   @relation(fields: [bookId], references: [id])

  highlights Highlight[]
}

model Lesson {
  id        String   @id @default(cuid())
  title     String
  content   Json?
  createdAt DateTime @default(now())
  yearId    String
  year      Year     @relation(fields: [yearId], references: [id])

  highlights Highlight[]
}

model CreativeNote {
  id        String   @id @default(cuid())
  content   Json?
  createdAt DateTime @default(now())
  yearId    String
  year      Year     @relation(fields: [yearId], references: [id])

  highlights Highlight[]
}

model Tag {
  id     String @id @default(cuid())
  name   String
  userId String
  user   User   @relation(fields: [userId], references: [id])

  highlights Highlight[]

  @@unique([userId, name])
}

model Highlight {
  id          String @id @default(cuid())
  text        String
  startOffset Int
  endOffset   Int
  createdAt   DateTime @default(now())

  // Polymorphic relations to different content types
  dailyLogId            String?
  dailyLog              DailyLog?            @relation(fields: [dailyLogId], references: [id])
  quarterlyReflectionId String?
  quarterlyReflection   QuarterlyReflection? @relation(fields: [quarterlyReflectionId], references: [id])
  goalId                String?
  goal                  Goal?                @relation(fields: [goalId], references: [id])
  taskId                String?
  task                  Task?                @relation(fields: [taskId], references: [id])
  subtaskId             String?
  subtask               SubTask?             @relation(fields: [subtaskId], references: [id])
  chapterId             String?
  chapter               Chapter?             @relation(fields: [chapterId], references: [id])
  lessonId              String?
  lesson                Lesson?              @relation(fields: [lessonId], references: [id])
  creativeNoteId        String?
  creativeNote          CreativeNote?        @relation(fields: [creativeNoteId], references: [id])

  tags Tag[]
}
